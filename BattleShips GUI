from tkinter import *

def RulesPop ():
    messagebox.showinfo(message='Rules:\nIn the first window enter the coordinates you would like your ship on.\nThe second window is the game window, here you will see your last shots and where the enemy has shot.\nYou win by finding out where the enemy ship is and shooting it.')


def MainMenu ():
    Menu = Tk()
    Menu.title("BattleShips")

    TextLBL = Label(text="-------------------------------------")
    TextLBL.grid(row=0, column=1)
    
    PlayBTN = Button(Menu, text=" Play ", command=CoordWindow)
    PlayBTN.grid(row=1, column=1, pady = 3)

    RulesBTN = Button(Menu, text="Rules", command=RulesPop)
    RulesBTN.grid(row=2, column=1, pady = 3)

    QuitBTN = Button(Menu, text=" Quit ", command=quit)
    QuitBTN.grid(row=3, column=1, pady = 3)
    
    Menu.mainloop
    

def PlayerPlace(XCoordBOX, YCoordBOX):
        try:
            XCoordGot = int(XCoordBOX.get())
            YCoordGot = int(YCoordBOX.get())
        except ValueError: #<--Idiot Proofing---
            print("It has to be an integer.")

        if  XCoordGot> 5 or YCoordGot> 5 or XCoordGot < 1 or YCoordGot <1:#<--Idiot proofing---
            print("Your coords have to be between 1 and 5 inclusive")
            
        else:
            Coords = XCoordGot,YCoordGot
            print(Coords)
            return Coords

def CoordWindow():
    Setup = Tk()
    Setup.title("Battle Ships")

    XCoordBOX = Spinbox(Setup, from_=1, to=5)
    XCoordBOX.grid(row=0, column=1)

    XCoordLBL = Label(Setup,text="X Coordinate")
    XCoordLBL.grid(row=0)

    YCoordBOX = Spinbox(Setup, from_=1, to=5)
    YCoordBOX.grid(row=1, column=1)

    YCoordLBL = Label(Setup,text="Y Coordinate")
    YCoordLBL.grid(row=1)

    EnterBTN = Button(Setup,text="Enter", command=lambda: PlayerPlace(XCoordBOX, YCoordBOX))
    EnterBTN.grid(row=2, column=1, sticky=E)

    QuitBTN = Button(Setup,text="Quit", command=quit)
    QuitBTN.grid(row=2, sticky=W)

    Setup.mainloop()


MainMenu()
